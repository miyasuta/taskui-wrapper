<mvc:View controllerName="taskuiwrapper.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <HBox id="hbox">
            <Input id="taskInstanceId" width="300px" class="sapUiTinyMarginEnd" placeholder="Enter Task Instance ID..."/>
            <Button id="approveButton" text="Open Task UI" press="onOpen" />
        </HBox>
        <core:ComponentContainer id="attachmentComponentContainer" />
    </Page>
</mvc:View>
